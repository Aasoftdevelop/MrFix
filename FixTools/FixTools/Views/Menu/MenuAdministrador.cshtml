
@{
    ViewBag.Title = "Menu Administrador";
}

<header id="formLogin" class="clearfix section">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 form-group">
                <p class="text-left alpha">
                    <a href="~/">
                        <img src="~/iconos/033-brick.svg" width="15%" style="margin: 0 auto;" title="Mantenimiento">
                    </a>
                </p>
            </div>
            <div class="col-md-6 form-group">
                <p class="text-left alpha">
                    <a href="~/">
                        <img src="~/iconos/manual.svg" width="15%" style="margin: 0 auto;" title="Manual Mantenimiento">
                    </a>
                </p>
            </div>

        </div>
      
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 form-group">
                <p class="text-left alpha">
                    <a href="~/">
                        <img src="~/iconos/022-file.svg" width="15%" style="margin: 0 auto;" title="Manual Contratacion">
                    </a>
                </p>
            </div>
            <div class="col-md-6 form-group">
                <p class="text-left alpha">
                    <a href="~/">
                        <img src="~/iconos/048-contract.svg" width="15%" style="margin: 0 auto;" title="Contratacion">
                    </a>
                </p>
            </div>
        </div>
    </div>

</header>


@section scripts
{
    <script>
    $(document).ready(function () {

        $("#formLogin").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Menu")"
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {


                    document.location.href = "@Url.Content("~/")";


            })
        })
    });
    </script>
}
